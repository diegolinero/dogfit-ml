<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="Base.Theme.DogFit" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:navigationBarColor">#FFFFFF</item>

        <!-- Compatibilidad con Material3 attrs -->
        <item name="colorPrimaryContainer">@color/md_theme_light_primary_container</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

    <style name="Theme.DogFit" parent="Base.Theme.DogFit" />

    <!-- Estilos personalizados -->
    <style name="Widget.DogFit.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.DogFit.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.DogFit.CardView.Elevated" parent="CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">4dp</item>
    </style>



</resources>

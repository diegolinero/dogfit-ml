<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Permisos ubicación solo para API <= 30 -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="30" />

    <!-- Permisos para servicio en primer plano -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />

    <!-- Permisos para notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Permisos para Android 12+ (API 31+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"
        tools:targetApi="s" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE"
        tools:targetApi="s" />

    <!-- Características del dispositivo -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <!-- Orientación de pantalla -->
    <uses-feature
        android:name="android.hardware.screen.portrait"
        android:required="false" />

    <application
        android:name=".DogFitApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DogFit"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Pantalla principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Metadatos para el tema -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <!-- Actividad de estadísticas -->
        <activity
            android:name=".StatisticsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Actividad de perfil del perro -->
        <activity
            android:name=".DogProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Actividad de salud y bienestar -->
        <activity
            android:name=".DogHealthActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Actividad de alertas -->
        <activity
            android:name=".AlertsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Actividad de historial -->
        <activity
            android:name=".HistoryScreen"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Ficha de mascota -->
        <activity
            android:name=".PetProfileScreen"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Rutas GPS -->
        <activity
            android:name=".RoutesScreen"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Calibración del sensor -->
        <activity
            android:name=".CalibrationScreen"
            android:exported="false"
            android:parentActivityName=".PetProfileScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PetProfileScreen" />
        </activity>

        <!-- Actividad de historial legacy -->
        <activity
            android:name=".ActivityHistoryActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DogFit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Servicio BLE -->
        <service
            android:name=".DogFitBleService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="connectedDevice">
            <intent-filter>
                <action android:name="com.astralimit.dogfit.ACTION_START_SERVICE" />
            </intent-filter>
        </service>

        <!-- Receptor de arranque (opcional, para iniciar servicio al encender dispositivo) -->
        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- Proveedor de contenido (si usas Room Database) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Metadatos para compatibilidad -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <!-- Para Android 12+ - Declaración de dispositivos Bluetooth -->
        <meta-data
            android:name="android.bluetooth.devicepicker.extra.NEED_AUTH"
            android:value="false" />
        <meta-data
            android:name="android.bluetooth.devicepicker.extra.FILTER_TYPE"
            android:value="1" />
        <meta-data
            android:name="android.bluetooth.devicepicker.extra.LAUNCH_PACKAGE"
            android:value="com.astralimit.dogfit" />
        <meta-data
            android:name="android.bluetooth.devicepicker.extra.LAUNCH_CLASS"
            android:value="com.astralimit.dogfit.MainActivity" />

    </application>

</manifest>
